    <script>
        let selectedWords = {};
        function selectWord(wordElement, answerId) {
            if (wordElement.classList.contains('used')) return;
            const answerArea = document.getElementById(answerId);
            const hiddenInput = document.getElementById(answerId + '_result');
            if (!selectedWords[answerId]) selectedWords[answerId] = [];
            const answerWord = document.createElement('div');
            answerWord.className = 'answer-word';
            answerWord.textContent = wordElement.textContent;
            answerWord.onclick = function() { removeWord(this, wordElement, answerId); };
            answerArea.appendChild(answerWord);
            selectedWords[answerId].push(wordElement.textContent);
            wordElement.classList.add('used');
            hiddenInput.value = selectedWords[answerId].join(' ');
        }
        function removeWord(answerWord, originalWord, answerId) {
            const wordText = answerWord.textContent;
            answerWord.remove();
            const index = selectedWords[answerId].indexOf(wordText);
            if (index > -1) selectedWords[answerId].splice(index, 1);
            originalWord.classList.remove('used');
            document.getElementById(answerId + '_result').value = selectedWords[answerId].join(' ');
        }
        document.getElementById('worksheetForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const messageDiv = document.getElementById('submitMessage');
            const studentName = document.getElementById('studentName').value.trim();
            if (!studentName) {
                messageDiv.className = 'message error';
                messageDiv.textContent = 'お名前を入力してください';
                return;
            }
            submitBtn.disabled = true;
            submitBtn.textContent = '📤 送信中...';
            messageDiv.className = 'message';
            messageDiv.style.display = 'none';
            const formData = new FormData(this);
            const data = { access_key: 'efddaa48-1483-4d9b-98ef-302270115670', subject: `Week3 Day3 ワークシート提出 - ${studentName}`, from_name: studentName };
            for (let [key, value] of formData.entries()) data[key] = value;
            try {
                const response = await fetch('https://api.web3forms.com/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    messageDiv.className = 'message success';
                    messageDiv.textContent = '✅ 提出完了！先生に通知が送られました。お疲れさまでした！';
                    document.querySelectorAll('input, textarea, button, select').forEach(input => {
                        if (input.type !== 'submit') input.disabled = true;
                    });
                    submitBtn.textContent = '✅ 提出済み';
                    setTimeout(() => { window.location.href = 'index.html'; }, 3000);
                } else throw new Error('送信に失敗しました');
            } catch (error) {
                messageDiv.className = 'message error';
                messageDiv.textContent = '❌ 送信に失敗しました。LINEで先生にお知らせください。';
                submitBtn.disabled = false;
                submitBtn.textContent = '📤 ワークシートを提出する';
            }
        });
    </script>
