    <script>
        document.querySelectorAll('.mood-emoji').forEach(emoji => {
            emoji.addEventListener('click', function() {
                document.querySelectorAll('.mood-emoji').forEach(e => e.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('moodInput').value = this.dataset.mood;
            });
        });

        document.getElementById('worksheetForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const messageDiv = document.getElementById('submitMessage');
            const studentName = document.getElementById('studentName').value.trim();
            
            if (!studentName) {
                messageDiv.className = 'message error';
                messageDiv.textContent = 'ãŠåå‰ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
                return;
            }
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'ğŸ“¤ é€ä¿¡ä¸­...';
            messageDiv.className = 'message';
            messageDiv.style.display = 'none';
            
            const formData = new FormData(this);
            const data = {
                access_key: 'efddaa48-1483-4d9b-98ef-302270115670',
                subject: `Top of the World Day1 ãƒ¯ãƒ¼ã‚¯ã‚·ãƒ¼ãƒˆæå‡º - ${studentName}`,
                from_name: studentName
            };
            
            for (let [key, value] of formData.entries()) {
                data[key] = value;
            }
            
            const patternChecks = document.querySelectorAll('input[name="pattern"]:checked');
            data.pattern = Array.from(patternChecks).map(cb => cb.value).join(', ') || 'æœªå›ç­”';
            
            try {
                const response = await fetch('https://api.web3forms.com/submit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    messageDiv.className = 'message success';
                    messageDiv.textContent = 'âœ… æå‡ºå®Œäº†ï¼å…ˆç”Ÿã«é€šçŸ¥ãŒé€ã‚‰ã‚Œã¾ã—ãŸã€‚ãŠç–²ã‚Œã•ã¾ã§ã—ãŸï¼';
                    
                    const inputs = document.querySelectorAll('input, textarea, button');
                    inputs.forEach(input => {
                        if (input.type !== 'submit') {
                            input.disabled = true;
                        }
                    });
                    
                    submitBtn.textContent = 'âœ… æå‡ºæ¸ˆã¿';
                    
                    setTimeout(() => {
                        window.location.href = 'index.html';
                    }, 3000);
                } else {
                    throw new Error('é€ä¿¡ã«å¤±æ•—ã—ã¾ã—ãŸ');
                }
                
            } catch (error) {
                messageDiv.className = 'message error';
                messageDiv.textContent = 'âŒ é€ä¿¡ã«å¤±æ•—ã—ã¾ã—ãŸã€‚LINEã§å…ˆç”Ÿã«ãŠçŸ¥ã‚‰ã›ãã ã•ã„ã€‚';
                
                submitBtn.disabled = false;
                submitBtn.textContent = 'ğŸ“¤ ãƒ¯ãƒ¼ã‚¯ã‚·ãƒ¼ãƒˆã‚’æå‡ºã™ã‚‹';
            }
        });
    </script>
